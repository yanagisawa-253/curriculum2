<!DOCTYPE html>
<html>
  <head>
    <title>Nagono</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <body class="d-flex flex-column vh-100">
    <header class="shadow">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3 border rounded" href="/">ながのCAKE</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item ">
                <%= link_to 'マイページ', user_path(current_user.id), class: 'nav-link text-light border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to 'カート', cart_items_path, class: 'nav-link text-light border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link text-light border rounded' %>
              </li>
              <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to '商品一覧', admin_items_path, class: 'nav-link text-light border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to '会員一覧', admin_users_path, class: 'nav-link text-light border rounded' %>
              </li>
              <li class="nav-item">
                <= link_to '注文履歴一覧', admin_root_path, class: 'nav-link text-light border rounded' %>
              </li>
              <li class="nav-item">
                <= link_to 'ジャンル一覧', admin_genres_path, class: 'nav-link text-light border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-light border rounded' %>
              </li>
              <% else %>
              <li class="nav-item">
               <%= link_to 'About', '/homes/about', class: 'nav-link text-light border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to '商品一覧', items_path, class: 'nav-link text-light border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to '新規登録', new_user_registration_path, class: 'nav-link text-light border rounded' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログイン', new_user_session_path, class: 'nav-link text-light border rounded' %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
