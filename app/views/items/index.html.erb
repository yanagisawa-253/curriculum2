<div class="container">
  <div class="row">
    <div class="item-container col-12">
      <% @items.each do |item| %>
      <div class="item-box col-3 mt-3 mx-auto">
        <div>
          <%= link_to public_item_path(item.id) do %>
            <%= attachment_image_tag item, :image, :fill, 250, 200 %>
          <% end %>
          <p><%= item.name %></p>
          <p><%= item.price %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>