<div class="container">
  <div class="row">
    <%= render "devise/shared/sideber", user: @user, books: @book %>
    <div class="col-8 offset-1">
      <table class="table">
        <% @books.each do |book| %>
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag(book.user, :user_image, fallback: "no_image.jpg") %></td>
              <!--画像のリンク view内での紐付けbook.user-->
              <td><%= link_to book.name, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>