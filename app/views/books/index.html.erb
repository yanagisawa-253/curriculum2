<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <table class="table">
        <% @books.each do |book| %>
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>user.image</td>
            <td><%= book.name %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><= link_to "Destroy", book_path(book.id), method :delete %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <%= form_with model: @book, local:true do |f| %>
      <%= f.text_field :name %>
      <%= f.text_area :body %>
      <%= f.submit "create" %>
    <% end %>
  </div>
</div>