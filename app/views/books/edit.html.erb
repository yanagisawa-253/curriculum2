<div class="container">
  <div class="row">
      <div class="col-10 mt-5 mx-auto">
        <h1>Book Edit</h1>
        <%= form_with model: @book, local:true do |f| %>
        <div class="row">
          <div class="form-group">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <%= f.text_area :body %>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <%= f.submit "UpdateBook", class: "btn btn-primary mt-3" %>
          </div>
        </div>
        <% end %>
      </div>
  </div>
</div>